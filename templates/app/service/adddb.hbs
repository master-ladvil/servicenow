<h4>Add User to ServiceNowDb</h4>
<div>
    <form>
        <table>

            <tbody>
                <tr>
                    <td><b>Name</b></td>
                    <td><input type="text" id="name"></td>
                </tr>
                <tr>
                    <td><b>Email</b></td>
                    <td><input type="text" id="email"></td>
                </tr>
                <tr>
                    <td><b>Phone</b></td>
                    <td><input type="text" id="phone"></td>
                </tr>
                <tr>
                    <td><b>Title</b></td>
                    <td><input type="text" id="title"></td>
                </tr>
                <tr>
                    <td><b>street</b></td>
                    <td><input type="text" id="street"></td>
                </tr>
                <tr>
                    <td><b>City</b></td>
                    <td><input type="text" id="city"></td>
                </tr>
                <tr>
                    <td><b>Country</b></td>
                    <td><input type="text" id="country"></td>
                </tr>
                <tr>
                    <td>
                        <b>TimeZone</b>
                    </td>
                    <td>
                        <select class="custom-select my-1 mr-sm-2" id="timezone">
                            <option value="Asia/Colombo">Asia/Colombo</option>
                            <option value="America/Los_Angeles">America/Los_Angeles</option>
                            <option value="Indian/Chagos">Indian/Chagos</option>
                            <option value="GMT">GMT</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><b>Gender</b></td>
                    <td> <select class="custom-select my-1 mr-sm-2" id="gender">
                            <option value="male">male</option>
                            <option value="female">female</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><b>Language</b></td>
                    <td> <select class="custom-select my-1 mr-sm-2" id="language">
                            <option value="english">English</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><input type="submit" value="submit User" {{action "submituser" }}></td>
                </tr>

            </tbody>
        </table>
    </form>
</div>
{{outlet}}